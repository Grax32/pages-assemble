{
  "name": "pages-assemble",
  "version": "1.0.0",
  "description": "Assemble supplied resources into a static site",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf static-basedir/build",
    "build": "tsc -v && tsc",
    "assemble-pages": "node --harmony lib -v -b static-basedir",
    "netlify": "node -v && npm run build && npm run assemble-pages",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "serve": "serve ./static-basedir/build",
    "start-nowatch": "npm run netlify && npm run serve",
    "start": "onchange -ivk \"src/**\" \"static-basedir/static-source/**\" -- npm run start-nowatch"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Grax32/pages-assemble"
  },
  "keywords": [
    "static"
  ],
  "author": "David Walker <dwalker-git@grax32.com> (https://grax32.com/)",
  "license": "ISC",
  "dependencies": {
    "@types/command-line-usage": "^5.0.1",
    "@types/glob": "^7.1.2",
    "@types/html-minifier": "^3.5.3",
    "@types/markdown-it": "0.0.9",
    "@types/uglifycss": "0.0.5",
    "base64-img": "^1.0.4",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "file-type": "^14.6.0",
    "fluentpipe": "^1.0.0",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "html-minifier": "^4.0.0",
    "http-server": "^0.12.3",
    "inversify": "^5.0.1",
    "markdown-it": "^10.0.0",
    "minimatch": "^3.0.4",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "uglify": "^0.1.5",
    "uglifycss": "0.0.29",
    "webpack": "^4.43.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/node": "^12.12.44",
    "@types/ts-nameof": "^4.2.1",
    "onchange": "^7.0.2",
    "prettier": "^1.19.1",
    "ts-nameof": "^4.2.2",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.5",
    "vash": "^0.12.10"
  }
}
