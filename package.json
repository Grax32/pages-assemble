{
  "name": "pages-assemble",
  "version": "1.0.0",
  "description": "Assemble supplied resources into a static site",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prebuild": "node prebuild.js && npm run clean && npm run clean:compiler-plugins && npm run build:compiler-plugins",
    "clean": "rimraf lib && mkdir lib",
    "build": "node ./node_modules/ttypescript/bin/tsc",
    "netlify": "npm run build && node lib -v -b static-basedir && ls -l static-basedir/build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "demo": "npm run build && node lib",
    "start": "node lib",
    "build:compiler-plugins": "tsc --project plugins",
    "clean:compiler-plugins": "rimraf plugins/lib"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Grax32/pages-assemble"
  },
  "keywords": [
    "static"
  ],
  "author": "David Walker <dwalker-git@grax32.com> (https://grax32.com/)",
  "license": "ISC",
  "dependencies": {
    "@types/command-line-usage": "^5.0.1",
    "@types/glob": "^7.1.1",
    "@types/markdown-it": "0.0.9",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "http-server": "^0.12.0",
    "inversify": "^5.0.1",
    "markdown-it": "^10.0.0",
    "minimatch": "^3.0.4",
    "path": "^0.12.7",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/node": "^12.12.21",
    "@types/ts-nameof": "^4.2.0",
    "prettier": "^1.19.1",
    "ts-nameof": "^4.2.2",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "^1.5.8",
    "typescript": "^3.7.4",
    "vash": "^0.12.9"
  }
}
