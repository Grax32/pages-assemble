{
  "name": "pages-assemble",
  "version": "1.0.0",
  "description": "Assemble supplied resources into a static site",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf static-basedir/build",
    "build": "tsc -v && tsc",
    "assemble-pages": "node --harmony lib -v -b static-basedir",
    "netlify": "node -v && npm run build && npm run assemble-pages",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "serve": "serve -n ./static-basedir/build",
    "start-nowatch": "npm run netlify && npm run serve",
    "push": "git add . && git commit -m PUSH && git push"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Grax32/pages-assemble"
  },
  "keywords": [
    "static"
  ],
  "author": "David Walker <dwalker-git@grax32.com> (https://grax32.com/)",
  "license": "ISC",
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.5",
    "@types/color-thief-node": "^1.0.1",
    "@types/command-line-usage": "^5.0.2",
    "@types/glob": "^7.1.4",
    "@types/html-minifier": "^4.0.1",
    "@types/markdown-it": "12.0.3",
    "@types/uglifycss": "0.0.7",
    "base64-img": "^1.0.4",
    "command-line-args": "^5.2.0",
    "command-line-usage": "^6.1.1",
    "file-type": "^16.5.2",
    "glob": "^7.1.7",
    "gray-matter": "^4.0.3",
    "html-minifier": "^4.0.0",
    "http-server": "^0.12.3",
    "inversify": "^5.1.1",
    "markdown-it": "^12.1.0",
    "minimatch": "^3.0.4",
    "node": "^16.6.1",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "uglify": "^0.1.5",
    "uglifycss": "0.0.29",
    "webpack": "^5.47.1"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.1",
    "@types/node": "^16.4.9",
    "@types/ts-nameof": "^4.2.1",
    "color-thief-node": "^1.0.4",
    "jimp": "^0.16.1",
    "prettier": "^2.3.2",
    "serve": "^12.0.0",
    "ts-nameof": "^5.0.0",
    "ts-node": "^10.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.3.5",
    "vash": "^0.13.0"
  }
}
