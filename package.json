{
  "name": "pages-assemble",
  "version": "1.0.0",
  "description": "Assemble supplied resources into a static site",
  "main": "index.js",
  "scripts": {
    "prebuild": "node scripts/build-info.js",
    "clean": "rimraf _site && echo \"✅ Clean completed\"",
    "build": "eleventy --quiet && echo \"✅ Build completed successfully\"",
    "build:verbose": "eleventy && echo \"✅ Verbose build completed\"",
    "dev": "eleventy --serve --port=8081 --watch",
    "start": "npm run dev",
    "netlify": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "serve -n ./_site",
    "build-and-serve": "npm run build && npm run serve",
    "preview": "npm run build && npm run serve",
    "build-info": "node scripts/build-info.js"
  },
  "files": [
    "src/**/*",
    "_site/**/*",
    ".eleventy.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Grax32/pages-assemble"
  },
  "keywords": [
    "static"
  ],
  "author": "David Walker <dwalker-git@grax32.com> (https://grax32.com/)",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "prettier": "^3.2.4",
    "rimraf": "^6.0.1",
    "serve": "^14.2.1"
  }
}
