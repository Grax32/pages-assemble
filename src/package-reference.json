{
  "name": "pages-assemble",
  "version": "1.0.0",
  "description": "Assemble supplied resources into a static site",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "build": "node prebuild.js && tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "demo": "npm run build && node lib/index.js",
    "start": "node lib/index.js",
    "test-deploy": "npm run build && node lib/index.js -b static-basedir -o static-dist "
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Grax32/pages-assemble"
  },
  "keywords": [
    "static"
  ],
  "author": "David Walker <dwalker-git@grax32.com> (https://grax32.com/)",
  "license": "ISC",
  "dependencies": {
    "@types/command-line-usage": "^5.0.1",
    "@types/glob": "^7.1.1",
    "@types/markdown-it": "0.0.9",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "http-server": "^0.12.0",
    "inversify": "^5.0.1",
    "markdown-it": "^10.0.0",
    "minimatch": "^3.0.4",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/node": "^12.12.21",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  }
}
