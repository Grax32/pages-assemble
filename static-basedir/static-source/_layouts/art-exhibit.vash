<!DOCTYPE html>
<html lang='en'>
<head>
  <!-- build time @(new Date()).toISOString() -->
  @html.block('headers')


  <meta charset='utf-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1' />
  <title>@(title || titleonly)</title>
  <script src='/content/hammer.min.js' type='text/javascript'></script>
  <script src='/content/scripts.js' type='text/javascript'></script>
  <link rel='stylesheet' href='/content/art-gallery.css' />

  <style>
      * {
          margin: 0;
          padding: 0;
          border: 0 none;
          box-sizing: border-box;
          font-family: Arial, Helvetica, sans-serif;
      }
  </style>
  <style>
      html,
      body {
          height: 100vh;
          width: 100%;
          overflow: auto;
      }

      #main-body {
          background-color: lightslategray;
          flex-direction: column;
          display: flex;
          height: 100vh;
          width: 100%;
          max-width: 1024px;
          margin-left: auto;
          margin-right: auto;
          box-shadow: 0px 0px 10px 2px black;
      }

      section {
          width: 100%;
          position: relative;
          flex: 1;
          flex-shrink: 0;
          min-height: max(50vh, 200px);
          min-width: 200px;
      }

      section > #show-area {
          position: absolute;
          height: 100%;
          width: 100%;
          padding: 30px;
      }

      header,
      footer {
          padding: 10px;
          width: 100%;
          background-color: #dcdcdc;
      }

      header h1 {
          font-size: 5vmin;
          text-shadow: 1px 1px 2px gray;
          border-bottom: 1px solid black;
          margin-bottom: 20px;
          color: maroon;
      }

      header {
          border-bottom: 2px solid maroon;
      }

      footer {
          border-top: 2px solid maroon;
      }

      #main-image {
          position: absolute;
          border-radius: 15px;
          box-shadow: 0px 0px 0px 3px white, 0px 0px 0px 6px black, 0px 0px 10px 7px lightgray;
          width: 20px;
          height: 20px;
          opacity: 0;
          transition: opacity 3s ease;
      }

      .loading-failed,
      .loading {
          padding: 20%;
      }

      .loading-failed {
          display: none;
      }

      .image-load-failed .loading-failed {
          display: block;
      }

      .image-load-failed .loading,
      .image-is-loaded .loading {
          display: none;
      }

      article {
          text-align: center;
          background-color: lightgray;
      }

      .navlink {
          opacity: 0;
          position: absolute;
          top: 0%;
          height: 100%;
          width: 50%;
          box-sizing: border-box;
          transition-duration: 1s;
          transition-property: opacity;
      }

      section:hover .navlink,
      .navlink:hover {
          opacity: .8;
      }

      .navlink.prev {
          left: 0;
          text-align: left;
      }

      .navlink.next {
          right: 0;
          text-align: right;
      }

      .navlink div {
          font-size: 4em;
          color: whitesmoke;
          filter: drop-shadow(0 0 4px #fcfcfc);
          position: absolute;
          top: 40%;
      }

      .navlink.next div {
          right: 15%;
      }

      .navlink.prev div {
          left: 15%;
      }
  </style>
</head>
<body>

<div id='main-body'>
  <header>
    <h1>Dreamwalker Gallery</h1>
    An online exhibition featuring selected works from the artist David&nbsp;Walker&nbsp;(@@grax32).
  </header>
  <section>
    @if (imgPath) {
    <div id='show-area'>
      <div class='loading'>Loading...</div>
      <div class='loading-failed'>Image Loading Failed.</div>
      <img id='main-image' src='@imgPath' />
    </div>
    <div class="navlink prev" onclick='goPrev()'><div><span class='fas fa-chevron-circle-left'></span></div></div>
    <div class="navlink next" onclick='goNext()'><div><span class='fas fa-chevron-circle-right'></span></div></div>
    } else {
    @html.raw(sections.main)
    }

  </section>
  <article>
    <h1>@title</h1>
    @imgDescription
  </article>
  <footer>
    Share to:
    <a class='share-link' title='Facebook' onclick="shareTo('facebook')"><i class='fab fa-facebook-f'></i></a>
    <a class='share-link' title='Twitter' to onclick="shareTo('twitter')"><i class='fab fa-twitter'></i></a>
    <a class='share-link' title='LinkedIn' onclick="shareTo('linkedin')"><i class='fab fa-linkedin-in'></i></a>
    <a class='share-link' title='Email' onclick="shareTo('email')"><i class='fas fa-at'></i></a>

    <h3>About the Artist</h3>
    David Walker is an Orlando-based artist working in photography and digital art mediums.
  </footer>
</div>

<template id='next'>@(model.context.getRelativeItemFromCollection('page:art', model.page, 1)?.outputRoute ??
  "/art/dreamwalker-gallery/")
</template>
<template id='previous'>@(model.context.getRelativeItemFromCollection('page:art', model.page, -1)?.outputRoute ??
  "/art/dreamwalker-gallery/")
</template>
@if (imgPath) {
<script>
  initializeImageResizer('#show-area');

  var hammertime = new Hammer(document.body, { });

  function goNext() {
    location.href = document.getElementById('next').innerHTML;
  }

  function goPrev() {
    location.href = document.getElementById('previous').innerHTML;
  }

  hammertime.on('swipeleft', goNext);
  hammertime.on('swiperight', goPrev);
</script>
}
</body>
</html>
